rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (via custom claims)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.get('admin', false) == true;
    }

    // Helper function to check if user is the owner
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Verified attendees collection
    // Only readable by the user themselves, writable only by Cloud Functions (admin)
    match /verified_attendees/{uid} {
      allow read: if isOwner(uid);
      allow write: if isAdmin();
    }

    // Presence collection
    // Readable by all authenticated users where shareLocation is true
    // Writable only by the owner
    match /presence/{uid} {
      allow read: if isAuthenticated() &&
                     (resource.data.shareLocation == true || isOwner(uid));
      allow create: if isOwner(uid) &&
                       request.resource.data.keys().hasAll(['zone', 'shareLocation', 'status', 'updatedAt']) &&
                       request.resource.data.shareLocation is bool &&
                       request.resource.data.updatedAt is timestamp;
      allow update: if isOwner(uid) &&
                       request.resource.data.keys().hasAll(['zone', 'shareLocation', 'status', 'updatedAt']) &&
                       request.resource.data.shareLocation is bool &&
                       request.resource.data.updatedAt is timestamp;
      allow delete: if isOwner(uid);
    }

    // Points of Interest collection
    // Readable by all authenticated users, writable only by admin
    match /poi/{poiId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Achievements collection
    // Readable by all authenticated, writable only by owner and admin
    match /achievements/{uid} {
      allow read: if isAuthenticated();
      allow create: if isOwner(uid) || isAdmin();
      allow update: if isOwner(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // Leaderboard collection
    // Readable by all authenticated users where optedIn is true
    // Users can only write their own entry
    match /leaderboard/{uid} {
      allow read: if isAuthenticated() &&
                     (resource.data.optedIn == true || isOwner(uid));
      // Create requires all fields
      allow create: if isOwner(uid) &&
                       request.resource.data.keys().hasAll(['displayName', 'points', 'badgeCount', 'optedIn', 'updatedAt']) &&
                       request.resource.data.points is number &&
                       request.resource.data.badgeCount is number &&
                       request.resource.data.optedIn is bool &&
                       request.resource.data.updatedAt is timestamp;
      // Update validates the merged document state (setDoc with merge: true)
      allow update: if isOwner(uid) &&
                       request.resource.data.updatedAt is timestamp &&
                       request.resource.data.points is number &&
                       request.resource.data.badgeCount is number &&
                       request.resource.data.optedIn is bool;
      allow delete: if isOwner(uid) || isAdmin();
    }

    // Hunt items collection (scavenger hunt)
    // Readable by all authenticated, writable only by admin
    match /hunt_items/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Hunt progress collection (scavenger hunt)
    // Readable by all authenticated (for leaderboard)
    // Writable only by the owner (user can update their own progress)
    match /hunt_progress/{progressId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // App configuration collection
    // Readable by all, writable only by admin
    match /app_config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Deny all other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
